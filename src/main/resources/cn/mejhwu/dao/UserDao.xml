<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mejhwu.dao.UserDao">

    <resultMap id="User" type="cn.mejhwu.model.UserDO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="salt" jdbcType="VARCHAR" property="salt"/>
        <result column="head_url" jdbcType="VARCHAR" property="headUrl"/>
    </resultMap>

    <insert id="addUser">
        INSERT `user`(`name`, `password`, `salt`, `head_url`)
        VALUES (#{name}, #{password}, #{salt}, #{headUrl})
    </insert>

    <select id="getUserById" resultMap="User">
        SELECT `id`, `name`, `password`, `salt`, `head_url`
        FROM `user`
        WHERE `id`=#{id}
    </select>


    <select id="getUserByName" resultMap="User">
        SELECT `id`, `name`, `password`, `salt`, `head_url`
        FROM `user`
        WHERE `name`=#{name}
    </select>

    <update id="updatePassowrd" >
        UPDATE `user`
        SET `password`=#{password}
        WHERE `id`=#{id}
    </update>

    <delete id="removeUserById">
        DELETE FROM `user`
        WHERE `id`=#{id}
    </delete>
</mapper>